<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_purchase_order_form_sec" model="ir.ui.view">
    <field name="name">purchase.order.form.sec</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">

      <!-- Inserta el grupo SECIHTI despuÃ©s de partner_id -->
      <xpath expr="//field[@name='partner_id']" position="after">
        <group string="SECIHTI">
          <field name="sec_project_id" options="{'no_open': False}" context="{'default_company_id': company_id}"/>
          <field name="sec_stage_id" domain="[('project_id', '=', sec_project_id)]"/>
          <field name="sec_activity_id" domain="[('stage_id', '=', sec_stage_id)]"/>
          <field name="sec_rubro_id"/>
          <!--<field name="sec_total_mxn_manual" attrs="{'required': [('currency_id', '!=', company_currency_id), ('sec_project_id', '!=', False)]}"/>-->
          <!--<field name="sec_mxn_pending" readonly="1"/>-->
        </group>
      </xpath>

    </field>
  </record>
</odoo>

