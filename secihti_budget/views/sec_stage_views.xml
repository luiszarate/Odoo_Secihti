<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sec_stage_tree" model="ir.ui.view">
        <field name="name">sec.stage.tree</field>
        <field name="model">sec.stage</field>
        <field name="arch" type="xml">
            <tree decoration-danger="has_inconsistency">
                <field name="code"/>
                <field name="name"/>
                <field name="project_id"/>
                <field name="amount_programa"/>
                <field name="amount_concurrente"/>
                <field name="amount_total"/>
                <field name="exec_total"/>
                <field name="rem_total"/>
                <field name="inconsistency_message" invisible="1"/>
                <field name="has_inconsistency" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_sec_stage_form" model="ir.ui.view">
        <field name="name">sec.stage.form</field>
        <field name="model">sec.stage</field>
        <field name="arch" type="xml">
            <form string="Etapa SECIHTI">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="project_id"/>
                        </group>
                        <group>
                            <field name="amount_programa"/>
                            <field name="amount_concurrente"/>
                            <field name="amount_total" readonly="1"/>
                        </group>
                        <group>
                            <field name="exec_programa" readonly="1"/>
                            <field name="exec_concurrente" readonly="1"/>
                            <field name="exec_total" readonly="1"/>
                        </group>
                        <group>
                            <field name="rem_programa" readonly="1"/>
                            <field name="rem_concurrente" readonly="1"/>
                            <field name="rem_total" readonly="1"/>
                        </group>
                    </group>
                    <div class="alert alert-danger" role="alert" attrs="{'invisible': [('inconsistency_message', '=', False)]}">
                        <field name="inconsistency_message" nolabel="1"/>
                    </div>
                    <notebook>
                        <page string="Actividades">
                            <field name="sec_activity_ids">
                                <tree editable="bottom" decoration-danger="traffic_light == 'orange'">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="amount_total" readonly="1"/>
                                    <field name="exec_total" readonly="1"/>
                                    <field name="traffic_light"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_sec_stage_search" model="ir.ui.view">
        <field name="name">sec.stage.search</field>
        <field name="model">sec.stage</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            <field name="code"/>
            <filter name="over_budget" string="Presupuesto excedido" domain="[('has_inconsistency', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="action_sec_stage" model="ir.actions.act_window">
        <field name="name">Etapas SECIHTI</field>
        <field name="res_model">sec.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_sec_stage_tree"/>
        <field name="search_view_id" ref="view_sec_stage_search"/>
        <field name="context">{"search_default_over_budget": 0}</field>
        <field name="groups_id" eval="[(4, ref('secihti_budget.group_sec_admin'))]"/>
    </record>
</odoo>
