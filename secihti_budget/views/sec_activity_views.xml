<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sec_activity_tree" model="ir.ui.view">
        <field name="name">sec.activity.tree</field>
        <field name="model">sec.activity</field>
        <field name="arch" type="xml">
            <tree decoration-danger="traffic_light == 'orange'">
                <field name="code"/>
                <field name="name"/>
                <field name="stage_id"/>
                <field name="project_id"/>
                <field name="amount_programa"/>
                <field name="amount_concurrente"/>
                <field name="amount_total"/>
                <field name="exec_total"/>
                <field name="traffic_light" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_sec_activity_form" model="ir.ui.view">
        <field name="name">sec.activity.form</field>
        <field name="model">sec.activity</field>
        <field name="arch" type="xml">
            <form string="Actividad SECIHTI">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="stage_id"/>
                            <field name="project_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="amount_programa" readonly="1"/>
                            <field name="amount_concurrente" readonly="1"/>
                            <field name="amount_total" readonly="1"/>
                        </group>
                        <group>
                            <field name="exec_programa" readonly="1"/>
                            <field name="exec_concurrente" readonly="1"/>
                            <field name="exec_total" readonly="1"/>
                        </group>
                        <group>
                            <field name="traffic_light" widget="badge"/>
                        </group>
                    </group>
                    <group>
                        <field name="justif_general" widget="text"/>
                    </group>
                    <notebook>
                        <page string="Presupuesto por rubro">
                            <field name="budget_line_ids">
                                <tree editable="bottom" decoration-danger="traffic_light_color == 'orange'" decoration-warning="traffic_light_color == 'yellow'">
                                    <field name="name"/>
                                    <field name="rubro_id"/>
                                    <field name="tipo_gasto" readonly="1"/>
                                    <field name="amount_programa"/>
                                    <field name="amount_concurrente"/>
                                    <field name="amount_total"/>
                                    <field name="exec_total" readonly="1"/>
                                    <field name="rem_total" />
                                    <field name="rem_color" invisible="1"/>
                                    <field name="traffic_light_color" invisible="1"/>
                                    <field name="traffic_light" widget="badge" options="{'class_field': 'traffic_light_color'}"/>
                                    <field name="justification"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Transferencias">
                            <field name="transfer_ids" context="{'default_activity_from_id': active_id, 'default_stage_id': stage_id}">
                                <tree string="Transferencias" create="true" delete="false">
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="stage_id"/>
                                    <field name="activity_from_id"/>
                                    <field name="activity_to_id"/>
                                    <field name="line_from_id"/>
                                    <field name="line_to_id"/>
                                    <field name="amount"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                                <form string="Transferencia">
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name" readonly="1"/>
                                                <field name="date"/>
                                                <field name="stage_id"/>
                                                <field name="activity_from_id" readonly="1"/>
                                                <field name="activity_to_id"/>
                                                <field name="project_id" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="line_from_id" domain="[('activity_id', '=', activity_from_id)]"/>
                                                <field name="line_to_id" domain="[('activity_id', '=', activity_to_id)]"/>
                                            </group>
                                            <group>
                                                <field name="amount_programa"/>
                                                <field name="amount_concurrente"/>
                                                <field name="amount"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="justification"/>
                                        </group>
                                        <footer>
                                            <button name="action_confirm" string="Confirmar" type="object" class="btn-primary" states="draft"/>
                                            <button string="Cerrar" class="btn-secondary" special="cancel"/>
                                            <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                                        </footer>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Ã“rdenes de compra">
                            <field name="purchase_order_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="date_order"/>
                                    <field name="sec_rubro_id"/>
                                    <field name="sec_total_mxn_manual"/>
                                    <field name="sec_mxn_pending"/>
                                    <field name="state" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_sec_activity_search" model="ir.ui.view">
        <field name="name">sec.activity.search</field>
        <field name="model">sec.activity</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="stage_id"/>
                <field name="project_id"/>
                <filter name="over_budget" string="Sobreejercidas" domain="[('traffic_light', '=', 'orange')]"/>
            </search>
        </field>
    </record>

    <record id="action_sec_activity" model="ir.actions.act_window">
        <field name="name">Actividades SECIHTI</field>
        <field name="res_model">sec.activity</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_sec_activity_tree"/>
        <field name="search_view_id" ref="view_sec_activity_search"/>
        <field name="groups_id" eval="[(4, ref('secihti_budget.group_sec_admin'))]"/>
    </record>
</odoo>
