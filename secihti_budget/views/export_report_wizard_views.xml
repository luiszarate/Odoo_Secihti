<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sec_export_report_wizard" model="ir.ui.view">
        <field name="name">sec.export.report.wizard.form</field>
        <field name="model">sec.export.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Exportar reporte" create="false" edit="false">
                <group>
                    <field name="project_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state_filter"/>
                    <field name="include_pending"/>
                </group>
                <group attrs="{'invisible': [('file_data', '=', False)]}">
                    <field name="filename" readonly="1"/>
                    <field name="file_data" filename="filename" readonly="1"/>
                </group>
                <footer attrs="{'invisible': [('file_data', '!=', False)]}">
                    <button string="Exportar" type="object" name="action_export" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
                <footer attrs="{'invisible': [('file_data', '=', False)]}">
                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sec_export_report" model="ir.actions.act_window">
        <field name="name">Exportar reporte SECIHTI</field>
        <field name="res_model">sec.export.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_sec_export_report_wizard"/>
        <field name="target">new</field>
        <field name="groups_id" eval="[(4, ref('secihti_budget.group_sec_admin'))]"/>
    </record>
</odoo>
