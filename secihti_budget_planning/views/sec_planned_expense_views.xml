<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Planned Expense Tree View -->
    <record id="view_sec_planned_expense_tree" model="ir.ui.view">
        <field name="name">sec.planned.expense.tree</field>
        <field name="model">sec.planned.expense</field>
        <field name="arch" type="xml">
            <tree string="Planned Expenses">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="simulation_id"/>
                <field name="amount" sum="Total Amount"/>
                <field name="allocated_amount" sum="Total Allocated"/>
                <field name="remaining_amount" sum="Total Remaining"/>
                <field name="allocation_percentage" widget="progressbar"/>
                <field name="allocation_status"
                       decoration-success="allocation_status == 'fully_allocated'"
                       decoration-warning="allocation_status == 'partially_allocated'"
                       decoration-danger="allocation_status in ('not_allocated', 'over_allocated')"/>
                <field name="currency_id" invisible="1"/>
                <button name="action_view_allocations" type="object" icon="fa-link" title="View Allocations"/>
            </tree>
        </field>
    </record>

    <!-- Planned Expense Form View -->
    <record id="view_sec_planned_expense_form" model="ir.ui.view">
        <field name="name">sec.planned.expense.form</field>
        <field name="model">sec.planned.expense</field>
        <field name="arch" type="xml">
            <form string="Planned Expense">
                <header>
                    <button name="action_view_allocations" string="Manage Allocations" type="object" class="oe_highlight" icon="fa-link"/>
                    <button name="action_quick_allocate" string="Quick Allocate" type="object" icon="fa-magic"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Future: Add smart buttons -->
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="simulation_id" options="{'no_create': True}"/>
                            <field name="project_id" readonly="1"/>
                            <field name="amount"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="allocated_amount"/>
                            <field name="remaining_amount"/>
                            <field name="allocation_percentage" widget="percentpie"/>
                            <field name="allocation_status" widget="badge"
                                   decoration-success="allocation_status == 'fully_allocated'"
                                   decoration-warning="allocation_status == 'partially_allocated'"
                                   decoration-danger="allocation_status in ('not_allocated', 'over_allocated')"/>
                            <field name="is_fully_allocated" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes about this planned expense..."/>
                    </group>
                    <notebook>
                        <page string="Budget Allocations" name="allocations">
                            <field name="allocation_ids" context="{'default_planned_expense_id': id, 'default_simulation_id': simulation_id}">
                                <tree string="Allocations" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="simulation_id" invisible="1"/>
                                    <field name="activity_id" options="{'no_create': True}"/>
                                    <field name="budget_line_id" domain="[('activity_id', '=', activity_id)]" options="{'no_create': True}"/>
                                    <field name="rubro_id" readonly="1"/>
                                    <field name="amount" sum="Total Allocated"/>
                                    <field name="line_rem_total" string="Real Remaining"/>
                                    <field name="simulated_remaining" string="Simulated Remaining"
                                           decoration-success="simulated_remaining_status == 'positive'"
                                           decoration-info="simulated_remaining_status == 'zero'"
                                           decoration-danger="simulated_remaining_status == 'negative'"/>
                                    <field name="simulated_remaining_status" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                                <form string="Budget Allocation">
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="simulation_id" readonly="1"/>
                                                <field name="planned_expense_id" readonly="1"/>
                                                <field name="activity_id" options="{'no_create': True}"/>
                                                <field name="budget_line_id" domain="[('activity_id', '=', activity_id)]" options="{'no_create': True}"/>
                                            </group>
                                            <group>
                                                <field name="rubro_id" readonly="1"/>
                                                <field name="amount"/>
                                                <field name="currency_id" invisible="1"/>
                                            </group>
                                        </group>
                                        <group string="Budget Line Information">
                                            <group>
                                                <field name="line_amount_total" readonly="1"/>
                                                <field name="line_rem_total" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="simulated_remaining" readonly="1"
                                                       decoration-success="simulated_remaining_status == 'positive'"
                                                       decoration-info="simulated_remaining_status == 'zero'"
                                                       decoration-danger="simulated_remaining_status == 'negative'"/>
                                                <field name="simulated_remaining_status" readonly="1"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="notes" placeholder="Additional notes..."/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2">
                                <field name="allocated_amount" widget="monetary"/>
                                <field name="remaining_amount" class="oe_subtotal_footer_separator" widget="monetary"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Planned Expense Kanban View -->
    <record id="view_sec_planned_expense_kanban" model="ir.ui.view">
        <field name="name">sec.planned.expense.kanban</field>
        <field name="model">sec.planned.expense</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="simulation_id">
                <field name="color"/>
                <field name="simulation_id"/>
                <field name="amount"/>
                <field name="allocated_amount"/>
                <field name="allocation_status"/>
                <field name="allocation_percentage"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb4">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <span class="float-right badge" t-attf-class="badge-#{record.allocation_status.raw_value == 'fully_allocated' ? 'success' : record.allocation_status.raw_value == 'partially_allocated' ? 'warning' : 'danger'}">
                                        <t t-esc="Math.round(record.allocation_percentage.raw_value)"/>%
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="text-muted">
                                        <strong>Amount:</strong> <field name="amount" widget="monetary"/>
                                    </div>
                                    <div class="text-muted">
                                        <strong>Allocated:</strong> <field name="allocated_amount" widget="monetary"/>
                                    </div>
                                    <progressbar field="allocation_percentage" title="Allocation Progress"/>
                                </div>
                                <div class="o_kanban_record_bottom mt4">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="simulation_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <button name="action_view_allocations" type="object" class="btn btn-sm btn-link">
                                            <i class="fa fa-link"/> Allocations
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Planned Expense Search View -->
    <record id="view_sec_planned_expense_search" model="ir.ui.view">
        <field name="name">sec.planned.expense.search</field>
        <field name="model">sec.planned.expense</field>
        <field name="arch" type="xml">
            <search string="Planned Expenses">
                <field name="name"/>
                <field name="simulation_id"/>
                <field name="project_id"/>
                <filter string="Not Allocated" name="not_allocated" domain="[('allocation_status', '=', 'not_allocated')]"/>
                <filter string="Partially Allocated" name="partially_allocated" domain="[('allocation_status', '=', 'partially_allocated')]"/>
                <filter string="Fully Allocated" name="fully_allocated" domain="[('allocation_status', '=', 'fully_allocated')]"/>
                <filter string="Over Allocated" name="over_allocated" domain="[('allocation_status', '=', 'over_allocated')]"/>
                <group expand="0" string="Group By">
                    <filter string="Simulation" name="group_by_simulation" context="{'group_by': 'simulation_id'}"/>
                    <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Allocation Status" name="group_by_status" context="{'group_by': 'allocation_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Planned Expense Action -->
    <record id="action_sec_planned_expense" model="ir.actions.act_window">
        <field name="name">Planned Expenses</field>
        <field name="res_model">sec.planned.expense</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new planned expense
            </p>
            <p>
                Planned expenses represent costs that you want to fund using
                remaining budget from your activities and rubros.
            </p>
        </field>
    </record>

    <!-- Budget Allocation Tree View -->
    <record id="view_sec_budget_allocation_tree" model="ir.ui.view">
        <field name="name">sec.budget.allocation.tree</field>
        <field name="model">sec.budget.allocation</field>
        <field name="arch" type="xml">
            <tree string="Budget Allocations">
                <field name="sequence" widget="handle"/>
                <field name="simulation_id"/>
                <field name="planned_expense_id"/>
                <field name="activity_id"/>
                <field name="rubro_id"/>
                <field name="amount" sum="Total Allocated"/>
                <field name="line_rem_total" sum="Total Real Remaining"/>
                <field name="simulated_remaining" sum="Total Simulated Remaining"
                       decoration-success="simulated_remaining_status == 'positive'"
                       decoration-info="simulated_remaining_status == 'zero'"
                       decoration-danger="simulated_remaining_status == 'negative'"/>
                <field name="simulated_remaining_status" invisible="1"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Budget Allocation Form View -->
    <record id="view_sec_budget_allocation_form" model="ir.ui.view">
        <field name="name">sec.budget.allocation.form</field>
        <field name="model">sec.budget.allocation</field>
        <field name="arch" type="xml">
            <form string="Budget Allocation">
                <sheet>
                    <group>
                        <group string="Allocation Details">
                            <field name="simulation_id" options="{'no_create': True}"/>
                            <field name="planned_expense_id" options="{'no_create': True}"/>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Budget Source">
                            <field name="activity_id" options="{'no_create': True}"/>
                            <field name="budget_line_id" domain="[('activity_id', '=', activity_id)]" options="{'no_create': True}"/>
                            <field name="rubro_id" readonly="1"/>
                            <field name="project_id" readonly="1"/>
                        </group>
                    </group>
                    <group string="Budget Information">
                        <group>
                            <label for="line_amount_total" string="Budget Line Totals"/>
                            <div>
                                <div class="o_row">
                                    <span class="text-muted">Total Budget:</span>
                                    <field name="line_amount_total" readonly="1" widget="monetary"/>
                                </div>
                                <div class="o_row">
                                    <span class="text-muted">Real Remaining:</span>
                                    <field name="line_rem_total" readonly="1" widget="monetary"/>
                                </div>
                            </div>
                        </group>
                        <group>
                            <label for="simulated_remaining" string="After This Simulation"/>
                            <div>
                                <field name="simulated_remaining" readonly="1" widget="monetary"
                                       class="oe_inline"
                                       decoration-success="simulated_remaining_status == 'positive'"
                                       decoration-info="simulated_remaining_status == 'zero'"
                                       decoration-danger="simulated_remaining_status == 'negative'"/>
                                <field name="simulated_remaining_status" readonly="1" widget="badge"
                                       decoration-success="simulated_remaining_status == 'positive'"
                                       decoration-info="simulated_remaining_status == 'zero'"
                                       decoration-danger="simulated_remaining_status == 'negative'"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes about this allocation..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Budget Allocation Search View -->
    <record id="view_sec_budget_allocation_search" model="ir.ui.view">
        <field name="name">sec.budget.allocation.search</field>
        <field name="model">sec.budget.allocation</field>
        <field name="arch" type="xml">
            <search string="Budget Allocations">
                <field name="simulation_id"/>
                <field name="planned_expense_id"/>
                <field name="activity_id"/>
                <field name="rubro_id"/>
                <filter string="Positive Remaining" name="positive" domain="[('simulated_remaining_status', '=', 'positive')]"/>
                <filter string="Zero Remaining" name="zero" domain="[('simulated_remaining_status', '=', 'zero')]"/>
                <filter string="Negative Remaining" name="negative" domain="[('simulated_remaining_status', '=', 'negative')]"/>
                <group expand="0" string="Group By">
                    <filter string="Simulation" name="group_by_simulation" context="{'group_by': 'simulation_id'}"/>
                    <filter string="Planned Expense" name="group_by_expense" context="{'group_by': 'planned_expense_id'}"/>
                    <filter string="Activity" name="group_by_activity" context="{'group_by': 'activity_id'}"/>
                    <filter string="Rubro" name="group_by_rubro" context="{'group_by': 'rubro_id'}"/>
                    <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Budget Allocation Action -->
    <record id="action_sec_budget_allocation" model="ir.actions.act_window">
        <field name="name">Budget Allocations</field>
        <field name="res_model">sec.budget.allocation</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new budget allocation
            </p>
            <p>
                Budget allocations connect budget lines (rubros) to planned expenses,
                allowing you to simulate how to use your remaining budget.
            </p>
        </field>
    </record>

</odoo>
