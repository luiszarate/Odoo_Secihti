<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Budget Allocation Wizard Form View -->
    <record id="view_sec_budget_allocation_wizard_form" model="ir.ui.view">
        <field name="name">sec.budget.allocation.wizard.form</field>
        <field name="model">sec.budget.allocation.wizard</field>
        <field name="arch" type="xml">
            <form string="Quick Allocate Budget">
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <p><strong>ðŸš€ Quick Allocation Wizard</strong></p>
                        <p>This wizard helps you quickly allocate budget from multiple sources to complete your expense.</p>
                        <ul class="mb-0">
                            <li>Budget lines are sorted by available amount (highest first)</li>
                            <li>The <strong>"Suggested"</strong> column shows optimal amounts</li>
                            <li>Enter custom amounts or use <strong>"Use Suggested Amounts"</strong> button</li>
                        </ul>
                    </div>

                    <group>
                        <group string="Expense Summary">
                            <field name="planned_expense_id" readonly="1" string="Expense"/>
                            <field name="simulation_id" readonly="1" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Allocation Progress">
                            <label for="expense_amount" string="Status"/>
                            <div>
                                <div class="o_row">
                                    <span class="text-muted">Total Cost:</span>
                                    <field name="expense_amount" widget="monetary" readonly="1" class="oe_inline"/>
                                </div>
                                <div class="o_row">
                                    <span class="text-muted">Already Allocated:</span>
                                    <field name="allocated_amount" widget="monetary" readonly="1" class="oe_inline"/>
                                </div>
                                <div class="o_row">
                                    <span class="font-weight-bold text-primary">Still Needs:</span>
                                    <field name="remaining_amount" widget="monetary" readonly="1" class="oe_inline font-weight-bold text-primary"/>
                                </div>
                            </div>
                        </group>
                    </group>

                    <group string="ðŸ’° Available Budget Lines">
                        <field name="allocation_line_ids" nolabel="1">
                            <tree string="Budget Lines" editable="bottom" decoration-muted="available_amount == 0">
                                <field name="sequence" widget="handle"/>
                                <field name="activity_id" readonly="1"/>
                                <field name="rubro_id" readonly="1"/>
                                <field name="available_amount" widget="monetary" readonly="1"
                                       decoration-success="available_amount > 0"
                                       decoration-muted="available_amount == 0"/>
                                <field name="suggested_amount" widget="monetary" readonly="1"/>
                                <field name="amount" widget="monetary" sum="Total to Allocate"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="budget_line_id" invisible="1"/>
                                <field name="wizard_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button string="Allocate Selected" name="action_allocate" type="object" class="btn-primary"/>
                    <button string="Use Suggested Amounts" name="action_allocate_suggested" type="object" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
