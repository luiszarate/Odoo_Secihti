<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Budget Allocation Wizard Form View -->
    <record id="view_sec_budget_allocation_wizard_form" model="ir.ui.view">
        <field name="name">sec.budget.allocation.wizard.form</field>
        <field name="model">sec.budget.allocation.wizard</field>
        <field name="arch" type="xml">
            <form string="Quick Allocate Budget">
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <p><strong>Quick Allocation Wizard</strong></p>
                        <p>Select budget lines below and enter the amounts you want to allocate to this expense.</p>
                    </div>

                    <group>
                        <group>
                            <field name="planned_expense_id" readonly="1"/>
                            <field name="simulation_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="expense_amount" widget="monetary"/>
                            <field name="allocated_amount" widget="monetary"/>
                            <field name="remaining_amount" widget="monetary" class="text-danger font-weight-bold"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <group string="Available Budget Lines">
                        <p class="text-muted">
                            Budget lines are sorted by available budget (highest first).
                            The "Suggested" column shows the recommended allocation for each line.
                        </p>
                        <field name="allocation_line_ids" nolabel="1">
                            <tree string="Budget Lines" editable="bottom" decoration-muted="available_amount == 0">
                                <field name="sequence" widget="handle"/>
                                <field name="activity_id" readonly="1"/>
                                <field name="rubro_id" readonly="1"/>
                                <field name="available_amount" widget="monetary" readonly="1"
                                       decoration-success="available_amount > 0"
                                       decoration-muted="available_amount == 0"/>
                                <field name="suggested_amount" widget="monetary" readonly="1"/>
                                <field name="amount" widget="monetary" sum="Total to Allocate"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="budget_line_id" invisible="1"/>
                                <field name="wizard_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button string="Allocate Selected" name="action_allocate" type="object" class="btn-primary"/>
                    <button string="Use Suggested Amounts" name="action_allocate_suggested" type="object" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
